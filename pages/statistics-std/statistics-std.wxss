.page {
  min-height: 100vh;
  height: 100vh;
  padding: 24rpx;
  background: #f3f4f6;
  box-sizing: border-box;
  overflow: hidden;
}
.safe-top {
  height: 40rpx;
}
.header {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}
.body {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx;
}
.field {
  margin-bottom: 24rpx;
}
.label {
  font-size: 26rpx;
  color: #374151;
  margin-bottom: 12rpx;
}
.textarea {
  border-radius: 16rpx;
  border: 1rpx solid #d1d5db;
  padding: 16rpx;
  min-height: 200rpx;
}
.btn-row {
  display: flex;
  gap: 16rpx;
  margin-bottom: 24rpx;
}
.btn {
  flex: 1;
}
.primary {
  background: #2563eb;
  color: #ffffff;
}
.danger {
  background: #ef4444;
  color: #ffffff;
}
.result-card {
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx;
}
.row {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 0;
}
.value {
  font-weight: 600;
}
