/* 登录页面样式 */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
}

/* 错误提示 */
.error-message {
  margin: 20rpx 30rpx 0;
  padding: 20rpx;
  background-color: rgba(255, 67, 67, 0.1);
  border-radius: 8rpx;
  border-left: 4rpx solid #ff4343;
}

.error-message text {
  color: #ff4343;
  font-size: 28rpx;
}

/* Tab切换栏 */
.tab-bar {
  display: flex;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 0;
  color: rgba(255, 255, 255, 0.6);
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  position: relative;
}

.tab-item.active {
  color: white;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: white;
}

/* Tab内容 */
.tab-content {
  flex: 1;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
}

.login-section,
.register-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 登录区域 */
.section-title {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.section-desc {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-bottom: 50rpx;
  line-height: 1.6;
}

/* 按钮 */
.btn {
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: white;
  color: #667eea;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary[disabled] {
  opacity: 0.6;
}

.btn-secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 表单组 */
.form-group {
  margin-bottom: 40rpx;
}

.label {
  display: block;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

/* 头像选择 */
.avatar-selector {
  display: flex;
  justify-content: center;
}

.avatar-button {
  width: 200rpx;
  height: 200rpx;
  padding: 0;
  border-radius: 12rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: all 0.3s ease;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.avatar-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.avatar-hint {
  display: block;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  text-align: center;
  margin-top: 16rpx;
}

/* 旧的样式(已废弃) */
.avatar-box {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s ease;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.avatar-box:active {
  background-color: rgba(255, 255, 255, 0.15);
  transform: scale(0.98);
}

.avatar-box image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

.avatar-box text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  text-align: center;
}

.avatar-box.has-avatar {
  border: none;
  background-color: transparent;
}

/* 输入框 */
.input-field {
  width: 100%;
  padding: 20rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.input-field:focus {
  border-color: rgba(255, 255, 255, 0.5);
  background-color: rgba(255, 255, 255, 0.15);
}

/* 字符计数 */
.char-count {
  text-align: right;
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.5);
}

/* 提示文本 */
.tips {
  text-align: center;
  margin-top: 30rpx;
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

/* 加载状态 */
.btn[loading]::after {
  display: none;
}

/* 响应式 */
@media (max-height: 800rpx) {
  .section-title {
    font-size: 40rpx;
    margin-bottom: 16rpx;
  }

  .section-desc {
    font-size: 26rpx;
    margin-bottom: 30rpx;
  }

  .tab-bar {
    margin-top: 40rpx;
    margin-bottom: 30rpx;
  }

  .tab-item {
    padding: 20rpx 0;
    font-size: 28rpx;
  }

  .tab-content {
    padding: 30rpx 24rpx;
  }
}
