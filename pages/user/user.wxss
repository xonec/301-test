/* 编辑模式 */
.edit-mode {
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.edit-form {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.form-section {
  margin-bottom: 40rpx;
}

.form-label {
  display: block;
  color: white;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

/* 头像按钮 */
.avatar-button {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  border-radius: 12rpx;
  border: 2rpx dashed rgba(255, 255, 255, 0.3);
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  transition: all 0.3s ease;
  margin: 0 auto;
  margin-bottom: 30rpx;
}

.avatar-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}

/* 输入框 */
.input-field {
  width: 100%;
  padding: 20rpx 24rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.input-field::placeholder {
  color: rgba(255, 255, 255, 0.4);
}

.input-field:focus {
  border-color: rgba(255, 255, 255, 0.5);
  background-color: rgba(255, 255, 255, 0.15);
}

/* 字符数 */
.char-count {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
  margin-top: 8rpx;
  text-align: right;
}

/* 编辑按钮组 */
.edit-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 40rpx;
}

.btn {
  flex: 1;
  padding: 20rpx;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background-color: white;
  color: #667eea;
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-primary[disabled] {
  opacity: 0.6;
}

.btn-secondary {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.btn-secondary:active {
  background-color: rgba(255, 255, 255, 0.3);
}

/* ... 旧的样式 */

.user-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0;
}

/* 用户部分 */
.user-section {
  display: flex;
  flex-direction: column;
}

/* 用户头部 */
.user-header {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-sizing: border-box;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 4rpx solid white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

.user-details {
  flex: 1;
  color: white;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 用户操作 */
.user-actions {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.action-btn {
  padding: 20rpx;
  background-color: #667eea;
  color: white;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.action-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.logout-btn {
  background-color: #ff4343;
}

/* 用户信息列表 */
.user-info-list {
  padding: 0 30rpx 30rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: white;
  margin-bottom: 12rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 未登录状态 */
.no-login {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background-color: #f5f5f5;
}

.no-login-text {
  font-size: 36rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.login-btn {
  padding: 20rpx 60rpx;
  background-color: #667eea;
  color: white;
  border-radius: 12rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 600;
}

.login-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* 响应式 */
@media (max-width: 768px) {
  .user-header {
    padding: 30rpx 20rpx;
  }

  .avatar {
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
  }

  .nickname {
    font-size: 32rpx;
  }

  .user-id {
    font-size: 22rpx;
  }

  .action-btn {
    padding: 16rpx;
    font-size: 28rpx;
  }
}
